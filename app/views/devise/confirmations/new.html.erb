<%=stylesheet "app_user_profile"%>
<div class="well well-large">
  <div class="container">
    <h2 class="well">Resend confirmation instructions</h2>
    <hr>

    <form accept-charset="UTF-8" action="/users/confirmation" class="form-horizontal" id="new_user" method="post">
     <input name="utf8" type="hidden" value="&#x2713;">
     <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>

     <div class="form-group">
      <label for="user_email" class="col-sm-1 control-label">Email</label>
      <div class="col-sm-4">
        <div class="input-group">
         <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
         <input type="email" class="form-control" autofocus="autofocus" name="user[email]" id="user_email" placeholder="Enter your email">
       </div>
     </div>
   </div>
   <div class="form-group">
    <input class="btn btn-primary btn-reset" name="commit" type="submit" value="Resend confirmation instructions">
  </div>
</form>
<a href=<%=user_omniauth_authorize_path(:facebook)%> title="sign in Ur App Zone with facebook">
  <img class="sign_in_with_facebook" src="/img/icons/sign-in-with-facebook-icon.jpg" alt="sign in Ur App Zone with facebook">
</a>
<a href=<%=user_omniauth_authorize_path(:linkedin)%> title="sign in Ur App Zone with linkedin">
  <img class="sign_in_with_linkedin" src="/img/icons/sign-in-with-linkedin-icon.png" alt="sign in Ur App Zone with linkedin">
</a>
<hr>


<div class="alert alert-warning">
  <a href="/users/password/new">Forgot your password?</a>
</div>


</div>
</div>