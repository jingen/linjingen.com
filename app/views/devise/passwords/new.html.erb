
<%=stylesheet "app_user_profile"%>
<div class="well well-large">
  <div class="container">

    <h2 class="well">Forgot your password?</h2>
    <hr>
    <form accept-charset="UTF-8" action="/users/password" class="form-horizontal" id="new_user" method="post">
      <input name="utf8" type="hidden" value="&#x2713;" />      
      <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>

      <div class="form-group">
        <label for="user_email" class="col-sm-1 control-label">Email</label>
        <div class="col-sm-4">
          <div class="input-group">
             <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
             <input type="email" class="form-control" autofocus="autofocus" name="user[email]" id="user_email" placeholder="Enter your email">
           </div>
        </div>
      </div>

      <div class="form-group">
        <input class="btn btn-primary btn-reset" name="commit" type="submit" value="Send me reset password instructions">
      </div>
    </form>
    <a href=<%=user_omniauth_authorize_path(:facebook)%> title="sign in Ur App Zone with facebook">
      <img class="sign_in_with_facebook" src="/img/icons/sign-in-with-facebook-icon.jpg" alt="sign in Ur App Zone with facebook">
    </a>
    <hr>
    <div class="alert alert-warning">
      <a href="/users/confirmation/new">Didn&#39;t receive confirmation instructions?</a>
    </div>
  </div>
</div>
