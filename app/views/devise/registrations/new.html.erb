<%=stylesheet "app_user_profile"%>
<div class="well well-large">
  <div class="container">

    <h2 class="well">Sign up</h2>

    <form accept-charset="UTF-8" action="/users" class="new_user form-horizontal" id="new_user" method="post">
      <input name="utf8" type="hidden" value="&#x2713;">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>

      <div class="form-group">
        <label for="user_email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
          <div class="input-group">
           <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
           <input type="email" class="form-control" autofocus="autofocus" name="user[email]" id="user_email" placeholder="Enter your email">
         </div>
       </div>
     </div> 

     <div class="form-group">
      <label for="user_password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-4">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <input type="password" class="form-control" name="user[password]" id="user_password" placeholder="Enter your password">
        </div>
      </div>
    </div>

     <div class="form-group">
      <label for="user_password_confirmation" class="col-sm-2 control-label">Password confirmation</label>
      <div class="col-sm-4">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <input type="password" class="form-control" name="user[password_confirmation]" id="user_password_confirmation" placeholder="Enter your password">
        </div>
      </div>
    </div>
    
    <div class="col-sm-offset-2">
      <input class="btn btn-primary" name="commit" type="submit" value="Sign up">
      <span class="fantasy"> Or </span>
      <a href=<%=user_omniauth_authorize_path(:facebook)%> title="sign in Ur App Zone with facebook">
        <img class="sign_in_with_facebook" src="/img/icons/sign-in-with-facebook-icon.jpg" alt="sign in Ur App Zone with facebook">
      </a>
      <a href=<%=user_omniauth_authorize_path(:linkedin)%> title="sign in Ur App Zone with linkedin">
        <img class="sign_in_with_linkedin" src="/img/icons/sign-in-with-linkedin-icon.png" alt="sign in Ur App Zone with linkedin">
      </a>
    </div>
  </form>
  <br>
  <div class="col-sm-offset-2">
    <a class="btn btn-primary" href="/users/sign_in">Go to login</a><br />
  </div>

  <hr>
  <div class="alert alert-warning">
    <p>
      <a href="/users/password/new">Forgot your password?</a>
    </p>
    <p>
      <a href="/users/confirmation/new">Didn&#39;t receive confirmation instructions?</a>
    </p>
  </div>
 </div>
</div>