<%=stylesheet "app_donation"%>
<%=javascript "donations"%>
<%content_for(:title) {"Donation on urappzone.com"}%>
<%content_for(:meta) do%>
<meta name="description" content="Donation on urappzone.com"> 
<%end%>

<div class="container donation_main" ng-controller="Donation">
  <%if !user_signed_in? %>
    <div class="alert alert-warning text-center">
        <span class="fantasy">Login to make a donation!</span> 
        <a class="btn btn-primary btn-xs btn-signup" data-toggle="modal" data-target="#signup-modal">Sign up now</a>
        <span class="fantasy">Or</span>
        <a class="btn btn-primary btn-xs btn-signup" data-toggle="modal" data-target="#login-modal">Login</a>

        <div class="signup-with-social">
          <span class="fantasy"> Or sign in with</span>
          <a href=<%=user_omniauth_authorize_path(:facebook)%> title="sign in Ur App Zone with facebook">
            <img class="sign_in_with_facebook" src="/img/icons/sign-in-with-facebook-icon.jpg" alt="sign in Ur App Zone with facebook">
          </a>
          <a href=<%=user_omniauth_authorize_path(:linkedin)%> title="sign in Ur App Zone with linkedin">
            <img class="sign_in_with_linkedin" src="/img/icons/sign-in-with-linkedin-icon.png" alt="sign in Ur App Zone with linkedin">
          </a>
          <a href=<%=user_omniauth_authorize_path(:google_oauth2)%> title="sign in Ur App Zone with google">
            <img class="sign_in_with_google" src="/img/icons/sign-in-with-google-icon.png" alt="sign in Ur App Zone with google">
          </a>
        </div>
    </div>
  <%end%>


  <%if user_signed_in?%>
      <span class="alert alert-info">Welcome <%=current_user.email%></span>
      <hr>
      <%=render "donation_form"%>
      <%=render "donation_history"%>
      <%=render "modal"%>
  <%end%>
</div>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
