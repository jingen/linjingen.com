<div ng-show="donation.type == 'physical_item'">
  <div class="form-group">
    <label for="width" class="col-xs-2 control-label">Width:</label>
    <div class="col-xs-3">
        <input class="form-control" type="text" id="width" ng-model="donation.width">
    </div>
  </div>  
  <div class="form-group">
    <label for="height" class="col-xs-2 control-label">Height:</label>
    <div class="col-xs-3">
        <input class="form-control" type="text" id="height" ng-model="donation.height">
    </div>
  </div>  
  <div class="form-group">
    <label for="weight" class="col-xs-2 control-label">Weight:</label>
    <div class="col-xs-3">
        <input class="form-control" type="text" id="weight" ng-model="donation.weight">
    </div>
  </div>  
</div>

<div ng-show="donation.type == 'voucher'">
  <div class="form-group">
  <label for="expirationDate" class="col-xs-2 control-label">Expiration date:</label>
    <div class="col-xs-3">
      <div class="input-group" >
        <input class="form-control" type="text" id="expirationDate" ng-model="donation.expiration_date" donation-date>
        <label for="expirationDate" class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></label>
      </div>
    </div>
  </div>
</div>

<div ng-show="donation.type == 'experience'">
  <div class="form-group">
    <label for="contactName" class="col-xs-2 control-label">Contact Name:</label>
    <div class="col-xs-3">
        <input class="form-control" type="text" id="contactName" ng-model="donation.contact_name">
    </div>
  </div>  

  <div class="form-group">
    <label for="location" class="col-xs-2 control-label">Location(address):</label>
    <div class="col-xs-3">
      <input class="form-control" type="text" id="location" ng-model="donation.location">
    </div>
  </div>  

</div>
